%%%%%%%%%Insert an Arabic word or short phrase into English text%%%%%%%
%Transliterated Arabic in the text and the same phrase in Arabic on the margins;
%the first argument uses babel shortcuts, the second one used arabtex transcription
\newcommand\arboth[2]{\textit{#1}\marginpar{\novocalize\arabtrue\transfalse\<#2>}}
\newcommand\arEI[1]{\fullvocalize\settrans{english}\transtrue\arabfalse\<#1>\marginpar{\novocalize\arabtrue\transfalse\<#1>}}
%Arabic term w/ all vowels
\newcommand\arVoc[1]{\fullvocalize \transfalse \arabtrue \<#1>}
\newcommand\ar[1]{\novocalize \transfalse \arabtrue \<#1>}
\newcommand\arU[1]{\setcode{utf8} \novocalize \transfalse \arabtrue \<#1> \setcode{arabtex}}
\newcommand\arV[1]{\setverb \novocalize \transfalse \arabtrue \<#1>}
%fully vocalized Arabic term on margin
\newcommand\arm[1]{\marginpar{\novocalize \arabtrue \transfalse \<#1>}}
\newcommand\armVoc[1]{\marginpar{\fullvocalize \arabtrue \transfalse \<#1>}}
%defective Arabic w/o diacritics, shapes only
\newcommand\ardefect[1]{\novocalize \transfalse \<#1>}

