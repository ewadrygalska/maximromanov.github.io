  \setlength\fboxsep{0pt}
  \setlength\fboxrule{0pt}
  \fbox{\includegraphics[width=\textwidth]{#1}}
  \caption[#2]
  {\footnotesize{#3}}
  %{#3}
  \label{#4}
\end{figure}
}

